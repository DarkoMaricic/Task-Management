@using TaskManagement.Buisness

@model IEnumerable<TaskManagement.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">List of users</h2><br/>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Firstname
        </th>
        <th>
            Surname
        </th>
        <th>
            Username
        </th>
        <th>
            Email
        </th>
        <th>
            Role
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SurName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @(DbManager.GetRoleByUserId(item.Id))
        </td>
        <td>
            @Html.ActionLink("Assign role", "AssignRole", new { userId = item.Id, username = item.UserName })
            <text>|</text>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
            <text>|</text>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            <text>|</text>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>


